<h1>
    Codeial /<%= title %>
</h1>

<section id="feed-posts">
    <h3>Posts</h3>
    <% if (locals.user) { %>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" id="new-post-content" cols="30" rows="3" placeholder="What's this post about?" required></textarea>
            <input type="submit" value="Post"/>
        </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for (post of posts) { %>
                <%- include('post'); %>
            <% } %>
        </ul>
    </div>
</section>